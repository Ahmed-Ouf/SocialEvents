@model IEnumerable<SocialEvents.Model.TargetGroup>

@{
    ViewBag.Title = Resources.TargetGroups;
}

<!-- MIDDLE-->
<div class="col-md-12">
    <!--page title & breadcrumb-->
    <header id="page-header">
        <ol class="breadcrumb">
            <li><a href="/home">الرئيسة</a></li>
        </ol>
        <h1><i class='fa fa-fw fa-user-circle'></i> @ViewBag.Title</h1>

    </header><!--./page title & breadcrumb-->

    <div id="content" class="padding-20">

        <div class="row">
            <div class="col-lg-12">
                <ul>
                    <li>يتم من خلالها استعراض جميع @Resources.TargetGroups</li>
                </ul>
            </div>
        </div>

        <div>
            @Html.ActionLink("إضافة جديد", "Create", null, new { @class = "btn btn-primary" })
        </div>

    </div>
    <div class="row">

        <!--col: right-->
        <div class="col-md-12 col-lg-12">

            <div id="" class="panel panel-info">

                <div class="panel-heading">

                    <span class="elipsis">
                        <!-- panel title -->
                        <strong class=""><i class="fa fa-fw fa-flip-horizontal fa-list"></i> @ViewBag.Title</strong>
                    </span>


                    <!-- right options -->
                    <ul class="options pull-right list-inline">
                        <li><a href="#" class="opt panel_colapse" data-toggle="tooltip" title="" data-placement="bottom" data-original-title="إغلاق/فتح"></a></li>
                        <li><a href="#" class="opt panel_fullscreen hidden-xs" data-toggle="tooltip" title="" data-placement="bottom" data-original-title="كامل الشاشة"><i class="fa fa-expand"></i></a></li>
                    </ul>
                    <!-- /right options -->


                </div>

                <!-- panel content -->
                <div class="panel-body">

                    <div class="table-responsive">
                        <table class="dataTable table table-condensed table-hover table-striped nomargin">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="trHover">
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>

                                        <td>
                                            <a href="@Url.Action("Edit","TargetGroup", new { id = item.Id })">
                                                <i class="fa fa-fw fa-pencil text-success" data-toggle="tooltip" data-placement="top" title="تعديل"></i>
                                            </a>
                                            @*<a href="@Url.Action("Details","TargetGroup", new { id = item.Id })">
                                                <i class="fa fa-fw fa-dashboard text-success" data-toggle="tooltip" data-placement="top" title="تفاصيل"></i>
                                            </a>*@
                                            <a href="@Url.Action("Delete","TargetGroup", new { id = item.Id })">
                                                <i class="fa fa-fw fa-trash text-danger" data-toggle="tooltip" data-placement="top" title="حذف"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>

                </div>
                <!-- /panel content -->

            </div>


        </div>
        <!--./col: right-->


    </div>

</div>
