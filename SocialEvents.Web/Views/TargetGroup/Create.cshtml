@model SocialEvents.Model.TargetGroup


@{
    ViewBag.Title = Resources.Btn_Create;
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()



    <!-- MIDDLE-->
    <div class="col-md-12">

        <!--page title & breadcrumb-->
        <header id="page-header">
            <ol class="breadcrumb">
                <li><a href="@Url.Action("Index","Home")">@Resources.Home</a></li>
                <li><a href="@Url.Action("Index","Notification")">@Resources.Notifications</a></li>
            </ol>
            <h1><i class='fa fa-fw fa-user-circle'></i> @ViewBag.Title</h1>

        </header><!--./page title & breadcrumb-->

        <div id="content">
            <br />
            <div class="col-lg-12">
                <ul>
                    <li>    يتم من خلالها أضافة الفئات المستهدفة</li>
                </ul>
            </div>

            <div class="row">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <!--col: left-->
                <div class="col-md-12 col-lg-12">
                    <div id="" class="panel panel-default">

                        <div class="panel-heading">

                            <span class="elipsis">
                                <!-- panel title -->
                                <strong><i class="fa fa-fw fa-plus"></i> @Resources.Btn_Create  @Resources.Notification</strong>
                            </span>

                            <!-- right options -->
                            <ul class="options pull-right list-inline">
                                <li><a href="#" class="opt panel_colapse" data-toggle="tooltip" title="" data-placement="bottom" data-original-title="إغلاق/فتح"></a></li>
                            </ul>
                            <!-- /right options -->

                        </div>

                        <!-- panel content -->
                        <div class="panel-body">

                            <div class="form-group">
                                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>



                            <hr />
                            <button type="submit" class="btn btn-block btn-primary">@Resources.Btn_Save</button>

                        </div>
                        <!-- /panel content -->

                    </div>
                </div>
                <!--./col left-->

            </div>

        </div>

    </div>
    <!-- /MIDDLE -->
}