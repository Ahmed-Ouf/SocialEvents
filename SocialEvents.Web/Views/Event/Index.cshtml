@model IEnumerable<SocialEvents.Model.Event>

@{
    ViewBag.Title = "Index";
    Department department = ViewBag.Department;
}

<h2>Index</h2>
<div class="row">
    <div class="col-md-3">

    </div>

</div>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th class="Searchable">
                @Html.DisplayNameFor(model => model.Category.Name)
            </th>
            <th class="Searchable">
                @Html.DisplayNameFor(model => model.Department.DepartmentNameAr)
            </th>
            <th class="Searchable">
                @Html.DisplayNameFor(model => model.Location.Name)
            </th>
            <th class="Searchable">
                @Html.DisplayNameFor(model => model.TargetGroup.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notifiable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Published)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.DepartmentNameAr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TargetGroup.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notifiable)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Published)
                </td>
                <td>
                    @if (department != null)
                    {
                        <span>
                            @if (item.State == StateEnum.Pending)
                            {
                                <span>@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |</span>
                            }

                            @Html.ActionLink("Details", "Details", new { id = item.Id })
                            @if (ViewBag.IsSocialServicesDept)
                            {
                                <span>
                                    |
                                    @Html.ActionLink("Approval", "Approval", new { id = item.Id }) |
                                    @Html.ActionLink("Publish", "Publish", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </span>
                            }
                        </span>
                    }


                </td>
            </tr>
        }
    </tbody>

    <tfoot>
        <tr>

            <th class="Searchable">
                @Html.DisplayNameFor(model => model.Category.Name)
            </th>
            <th class="Searchable">
                @Html.DisplayNameFor(model => model.Department.DepartmentNameAr)
            </th>
            <th class="Searchable">
                @Html.DisplayNameFor(model => model.Location.Name)
            </th>
            <th class="Searchable">
                @Html.DisplayNameFor(model => model.TargetGroup.Name)
            </th>
            <th colspan="5">

            </th>
            <th>

            </th>
        </tr>
    </tfoot>


</table>
