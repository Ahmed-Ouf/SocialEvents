@model SocialEvents.Model.Location

@{
    ViewBag.Title = Resources.Btn_Details;
}

<!-- MIDDLE-->
<div class="col-md-12">

    <!--page title & breadcrumb-->
    <header id="page-header">
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index","Home")">@Resources.Home</a></li>
            <li><a href="@Url.Action("Index","location")">@Resources.Location</a></li>
        </ol>
        <h1><i class='fa fa-fw fa-location-arrow'></i> @ViewBag.Title</h1>

    </header><!--./page title & breadcrumb-->

    <div id="content">
        <br />
        <div class="col-lg-12">
            <ul>
                <li>    يتم من خلالها استعراض الموقع </li>
            </ul>
        </div>

        <div class="row">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <!--col: left-->
            <div class="col-md-12 col-lg-12">
                <div id="" class="panel panel-default">

                    <div class="panel-heading">

                        <span class="elipsis">
                            <!-- panel title -->
                            <strong><i class="fa fa-fw fa-plus"></i>@Resources.Btn_Details @Resources.Location</strong>
                        </span>

                        <!-- right options -->
                        <ul class="options pull-right list-inline">
                            <li><a href="#" class="opt panel_colapse" data-toggle="tooltip" title="" data-placement="bottom" data-original-title="إغلاق/فتح"></a></li>
                        </ul>
                        <!-- /right options -->

                    </div>

                    <!-- panel content -->
                    <div class="panel-body">

                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.DisplayFor(m => m.Name)

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Longitude, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div id="googleMap" style="width:100%;height:400px;"></div>
                        </div>
                        <hr />
                        <div class="col-md-12">
                            @Html.ActionLink("رجوع", "Index", null, new { @class = "btn btn-block  btn-info" })
                        </div>


                    </div>
                    <!-- /panel content -->

                </div>
            </div>
            <!--./col left-->

        </div>

    </div>

</div>
<!-- /MIDDLE -->
@section Scripts {
    <script>
        var dbLongitude = "@Model.Longitude";
        var dbLatitude = "@Model.Latitude";
    </script>
    <script src="~/Scripts/Application/location.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAlJz_ruQucA6lUh96BNA75AsFJLlSYe98&callback=myMap"></script>
}